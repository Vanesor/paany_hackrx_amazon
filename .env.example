# Environment configuration for Accuracy-Optimized RAG System
# Copy this file to .env and fill in your values

# Google API Configuration (Required)
GOOGLE_API_KEY=your_google_api_key_here

# System Configuration
PYTHONPATH=/app
CACHE_DIR=/app/cache
MODEL_CACHE_DIR=/app/models
NLTK_DATA=/app/nltk_data

# Model Cache Directories (for BGE-base and cross-encoder models)
TRANSFORMERS_CACHE=/app/models
SENTENCE_TRANSFORMERS_HOME=/app/models
HF_HOME=/app/models

# RAG System Configuration
RAG_MODE=ACCURACY
BGE_MODEL=BAAI/bge-base-en-v1.5
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# Performance Settings (for 2GB RAM system)
MAX_BATCH_SIZE=12
TOP_K_INITIAL=18
TOP_K_FINAL=8
RERANK_THRESHOLD=0.5

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Optional: Performance Monitoring
ENABLE_MEMORY_MONITORING=true
MEMORY_WARNING_THRESHOLD=1.5
MEMORY_CRITICAL_THRESHOLD=1.7
